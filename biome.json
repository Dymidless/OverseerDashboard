{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": ["**", "!**/.VSCodeCounter", "!**/.turbo", "!**/.typedoc", "!**/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"html": {
		"experimentalFullSupportEnabled": true,
		"formatter": {
			"enabled": true,
			"indentScriptAndStyle": true
		}
	},
	"linter": {
		"domains": {
			"project": "all",
			"test": "all",
			"vue": "all"
		},
		"enabled": true,
		"rules": {
			"complexity": {
				"noImplicitCoercions": "error",
				"useSimplifiedLogicExpression": "error"
			},
			"correctness": {
				"noNodejsModules": "off",
				"noUndeclaredDependencies": "off",
				"noUnusedImports": "off",
				"noUnusedVariables": "off",
				"useImportExtensions": {
					"level": "error",
					"options": {
						"forceJsExtensions": true
					}
				}
			},
			"nursery": {
				"noUnresolvedImports": "off",
				"useSortedClasses": {
					"level": "error",
					"options": {
						"attributes": ["class", "classList"]
					}
				}
			},
			"recommended": true,
			"style": {
				"noDefaultExport": "off",
				"noMagicNumbers": "error",
				"useImportType": "error",
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"conventions": [
							{
								"formats": ["camelCase", "snake_case"],
								"selector": {
									"kind": "typeProperty"
								}
							},
							{
								"formats": ["camelCase", "snake_case"],
								"selector": {
									"kind": "objectLiteralProperty"
								}
							}
						],
						"strictCase": false
					}
				},
				"useNodejsImportProtocol": "error",
				"useReadonlyClassProperties": {
					"level": "error",
					"options": {
						"checkAllProperties": true
					}
				},
				"useUnifiedTypeSignatures": "error"
			},
			"suspicious": {
				"noReactSpecificProps": "off",
				"noUnassignedVariables": "error",
				"useAwait": "error"
			}
		}
	}
}
